<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txt_visor_selos"
        android:background="@color/light_black"
        android:hint="Insira Valor"
        android:textSize="35dp"
        android:gravity="end|center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="55dp"
        >
    </EditText>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TableRow>

            <TextView
                android:id="@+id/txt_titulo_selos5"
                android:text="Selos 5"
                android:background="@color/light_black"
                android:gravity="start|center_vertical"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_weight="0.5"
                android:layout_height="80dp"
                />
            <TextView
                android:id="@+id/txt_resultado_selos5"
                android:background="@color/white"
                android:textColor="@color/other_orange"
                android:textSize="30dp"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="80dp"
                />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/txt_titulo_selos3"
                android:text="Selos 3"
                android:background="@color/light_black"
                android:gravity="start|center_vertical"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_weight="0.5"
                android:layout_height="80dp"
                />
            <TextView
                android:id="@+id/txt_resultado_selos3"
                android:background="@color/white"
                android:textColor="@color/other_orange"
                android:textSize="30dp"
                android:gravity="center|center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="80dp"
                />

        </TableRow>
        <TableRow android:layout_marginTop="30dp">
            <Button
                android:id="@+id/bt_calculaSelos_selos"
                android:text="Calcular Selos"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:layout_height="100dp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:backgroundTint="@color/other_orange"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/bt_limpaSelos_selos"
                android:text="Limpa"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:layout_height="100dp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:backgroundTint="@color/light_grey"
                android:gravity="center"
                android:textSize="25dp"
                />
        </TableRow>
        <TableRow android:layout_marginTop="80dp">
            <Button
                android:id="@+id/bt_sair_selos"
                android:text="Sair"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:layout_height="100dp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:backgroundTint="@color/light_grey"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                />
        </TableRow>
    </TableLayout>






</LinearLayout>